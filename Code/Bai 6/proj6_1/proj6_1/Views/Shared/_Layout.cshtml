<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
</head>
<body>

    <style>
        #container {
            margin: 0;
            padding: 0;
        }

        #banner {
            width: 100%;
            height: 100px;
            text-align:center;
        }

        #content {
            display: flex;
            justify-content: space-around;
            width: 100%;
            height: calc(100% - 100px - 50px)
        }
        #menu {
            width: 200px;
            height: 100%;
        }

        #right_content {
            width: 250px;
            height: 100%;
        }

        #bottom {
            height: 50px;
            width: 100%;
            text-align: center;
            position: absolute;
            bottom: 10px;
        }
    </style>
    <div id="container">
        <div id="banner">
            <h1>Hanoi University Of Industry</h1>
        </div>
        <div id="content">
            <div id="menu">
                @{Html.RenderAction("ShowMenu", "Menu");}
            </div>
            <div id="content">
                @RenderBody()
            </div>
            <div id="right_content">
                Ảnh tuỳ chọn
            </div>
        </div>
        <div id="bottom">
            <h4>Nguyễn Văn Thắng - CNTT1K15</h4>
        </div>
    </div>
    
</body>
</html>
